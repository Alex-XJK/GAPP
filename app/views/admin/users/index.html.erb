<% content_for (:sidebar) do %>
    <%= render :partial => "layouts/sidebar" %>
<% end %>

<% if false %>
<div class="container-fluid">
    <div class="row">
        <%= yield :sidebar %>
    </div>
</div>
<% end %>

<% content_for:head do%>
  
    <script src="https://cdn.staticfile.org/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
    <%= javascript_pack_tag "table_style" %>
    <script>
    $( document ).on('turbolinks:load', function() {
      $('#pj_table').DataTable();
    });
    </script>
  
  <%end%>

  <%= javascript_pack_tag 'users_js' %>
  
  <% content_for :title, "Users" %>

  <body data-turbolinks="false">
  
  <div class="container">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%=link_to 'Admin home', '/admin' %>
      </li> 
      <li class="breadcrumb-item">
        <%=link_to 'User', '/admin/users' %>
      </li> 
      
    </ol>

    <h1>
    User
    </h1>
  
    <p>
        This page is made for admin to :
        <ul>
          <li>Check out all users in the system</li>
          <li>Edit user role</li>
        </ul>
    </p>
  
    <hr>
  
    <section id="project_admin" class="admin_block">
  
      <div id='hidden_helper' style = 'display: none;'>
      Hide columns: 
      <br>
      <% i=0 %>
      <% @usercolumn.each do |attr| %>
        
        <button class="toggle-vis" data-column='<%=i.to_s%>'> 
          <%= attr.capitalize %>
        </button>
        <%i += 1%>
        
      <%end%>
      <br>
    </div><br>
  
      <table id="pj_table" class="display" style="margin: 0;" data-page-length="-1">
        <thead>
          
          <% @usercolumnname.each do |attr| %>
            
            <th> <%= attr.capitalize %> </th>
            
          <% end %>
          <th>
            Actions
          </th>
          
        </thead>
  
        <tbody>
          <% @users.each do |usr| %>
          
            <tr>
              <% @usercolumn.each do |attr| %>

                <% if attr == 'role_id' && String(usr[attr]) != ""  %>
                <td> 
                  <div class="table_cell role_cell">
                    <%= @roles.find(usr[attr])["name"] %>
                  </div>
                </td>
                <% else %>
                <td> 
                  <div class="table_cell"> 
                    <%= usr[attr] %>
                  </div>
                </td>
                <% end %>
            
              <% end %>

              <td>
                <form action="/admin/users/edit" method="POST">  
                  <%= link_to '<button type="button" title="Delete"><i class="far fa-trash-alt"></i></button>'.html_safe, "/admin/users/" + String(usr.id), method: :delete,
                          data: { confirm: 'Are you sure?' } %>
                  
                  <button type="button" title="Edit Role" class="edit">
                      <i class="far fa-edit"></i>
                  </button>
                  <button type="submit" title="OK" class="submit" style="">
                      <i class="fas fa-check"></i>
                  </button>
                  
                  <a href="/admin/users/<%= usr.id %>">
                  <button type="button" title="View"> 
                      <i class="far fa-eye"></i>
                  </button>
                  </a>
                  <input type="hidden" name="id" value=<%= usr["id"] %>>
                  <input type="hidden" name="role_id" value="" class="target">
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                </form>
              </td>
            
            </tr>
          
          <% end %>
        </tbody>
  
      </table>

      <div>
      <a href="/admin/users/new">
        <button type="button">
            New User
        </button>
      </a>
      </div>
  
    </section>

    <hr>
    <br/>

  </div>


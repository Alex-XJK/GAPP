<% content_for :title, "Account Activation" %>
<style>
  body {
      background-color: #343a40;
    }
  </style>
<div class="login-page">
<div class="container login-section text-body mt-4 mb-4">
<div class="card login-card w-75 mx-auto">
<div class="card-body">

<div class="card-title text-center">
  <h2>Activate your account</h2>
</div>
<div class="alert alert-info alert-dismissible fade show">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <i class='fa fa-exclamation-circle'></i>
  <%= t "devise.invitations.edit.header" %> to activate account!
</div>

<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
  
  <% if resource.errors.any? %>
    <div class="alert alert-danger alert-dismissible fade show">
      <button class="close" data-dismiss="alert" type="button">
          <%= "Ã—" %>
      </button>
      <strong>
          <i class="fa fa-exclamation-triangle"></i>
          <%= resource.errors.full_messages.count %>
          <% if resource.errors.full_messages.count <= 1 %>
            <%= " error occurred!" %>
          <% else %>
            <%= " errors occurred!" %>
          <% end %>
      </strong>
      <br>
      <% resource.errors.full_messages.each do |message| %>
        <%= "- " %>
        <%= message %>
        <br>
      <% end %>
    </div>
  <% end %>

  <%= f.hidden_field :invitation_token %>

  <div class="form-inputs">
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t("devise.invitations.edit.submit_button") %>
  </div>
<% end %>

</div>
</div>
</div>
</div>
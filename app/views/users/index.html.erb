<% content_for (:sidebar) do %>
    <%= render :partial => "layouts/sidebar" %>
<% end %>

<% if false %>
<div class="container-fluid">
    <div class="row">
        <%= yield :sidebar %>
    </div>
</div>
<% end %>

<% content_for:head do%>
  
    <script src="https://cdn.staticfile.org/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
    <%= javascript_pack_tag "table_style" %>
  
  <%end%>
  
  <% content_for :title, "Users" %>
  
  <div class="container">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%=link_to 'Admin home', '/admin' %>
      </li> 
      <li class="breadcrumb-item">
        <%=link_to 'User', '/users' %>
      </li> 
      
    </ol>

    <h1>
    User
    </h1>
  
    <p>
        This page is made for admin to :
        <ul>
          <li>Check out all users in the system</li>
          <li>Edit user role</li>
        </ul>
    </p>
  
    <hr>
  
    <section id="project_admin" class="admin_block">
  
      <div id='hidden_helper'>
      Hide columns: 
      <br>
      <% i=0 %>
      <% @usercolumn.each do |attr| %>
        
        <button class="toggle-vis" data-column='<%=i.to_s%>'> 
          <%= attr.capitalize %>
        </button>
        <%i += 1%>
        
      <%end%>
      <br>
    </div><br>
  
      <table id="pj_table" class="display" style="margin: 0;">
        <thead>
          
          <% @usercolumn.each do |attr| %>
            
            <th> <%= attr.capitalize %> </th>
            
          <% end %>
          <th>
            Action
          </th>
          
        </thead>
  
        <tbody>
          <% @users.each do |usr| %>
          
            <tr>
              <% @usercolumn.each do |attr| %>
                
                <td> 
                  <div class="table_cell"> 
                    <%= usr[attr] %>
                  </div>
                </td>
            
              <% end %>

              <td>     
                <%= link_to '<button type="button">Delete</button>'.html_safe, "/users/" + String(usr.id), method: :delete,
                        data: { confirm: 'Are you sure?' } %>

                <a href="/users/<%= usr.id %>">
                <button type="button">     
                        Show
                </button>
                </a>
              </td>
            
            </tr>
          
          <% end %>
        </tbody>
  
      </table>

      <div>
      <a href="/users/new">
        <button type="button">
            New User
        </button>
      </a>
      </div>
  
    </section>

    <hr>
    <br/>

  </div>

